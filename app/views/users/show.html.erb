<% provide(:title, @user.name) %>

<div class="row">

  <aside class="col-md-4">

    <section class="mb-4">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>

      <span><%= link_to "View my profile", @user %></span><br>
      <span><strong>Microposts:</strong> <%= @user.microposts.count %></span>
    </section>

    <section>
      <%= render 'shared/stats' %>
    </section>

  </aside>

  <div class="col-md-8">

    <%= render 'follow_form' if signed_in? && !current_user?(@user) %>

    <% if @microposts.any? %>
      <h3>Microposts (<%= @microposts.count %>)</h3>

      <ol class="microposts">
        <%= render @microposts %>
      </ol>

      <%= will_paginate @microposts %>
    <% end %>

  </div>

</div>
