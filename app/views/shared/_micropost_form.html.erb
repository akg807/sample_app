<%= form_with(model: @micropost, local: true) do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="mb-3">
    <%= f.text_area :content,
                    class: "form-control",
                    placeholder: "Compose new micropost...",
                    rows: 3 %>
  </div>

  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
