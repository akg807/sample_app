<% @user ||= current_user %>

<div class="stats">

  <a href="<%= following_user_path(@user) %>" class="text-decoration-none">
    <strong id="following" class="stat d-block">
      <%= @user.followed_users.count %>
    </strong>
    following
  </a>

  <a href="<%= followers_user_path(@user) %>" class="text-decoration-none">
    <strong id="followers" class="stat d-block">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>

</div>
